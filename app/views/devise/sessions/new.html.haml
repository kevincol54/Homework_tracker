.signinheader
  %h2 Sign in as Teacher (Admin)
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true, input_html: {value: 'admin@example.com'}
      = f.input :password, required: false, input_html: {value: '12345678'}
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable? 
    <class="form-actions">
    \#{f.button :submit, "Sign in"}
    %br
  = render "devise/shared/links"

